{
  "name": "react-hidden",
  "version": "1.0.0",
  "description": "A React component to conditionally render children based on matching breakpoints or custom media queries with plenty on options.",
  "main": "dist/hidden.js",
  "types": "dist/hidden.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "parcel build ./Hidden.tsx --dist-dir ./dist",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/globalkonvict/react-hidden.git"
  },
  "keywords": [
    "react",
    "responsive",
    "hidden",
    "media query",
    "breakpoints"
  ],
  "author": "x <x@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-username/react-hidden/issues"
  },
  "homepage": "https://github.com/your-username/react-hidden#readme",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@parcel/packager-ts": "^2.11.0",
    "@parcel/transformer-typescript-types": "^2.11.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^17.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.11.0",
    "ts-jest": "^29.1.2",
    "typescript": "^4.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testEnvironment": "jsdom"
  }
}
